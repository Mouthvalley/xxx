<h2>新規登録画面</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>
  <table>
    <tr>
          <th>名前</th>
          <td>(姓)</td>
              <td><%= f.text_field :last_name, placeholder: "令和", autofocus: true, class: "name textlines-radius" %></td>
          <td>(名)</td>
              <td><%= f.text_field :first_name, placeholder: "花子", autofocus: true, class: "name textlines-radius" %></td>
        </tr>
    <tr>
          <th>フリガナ</th>
          <td class="nowrap">(セイ)</td>
            <td><%= f.text_field :kana_last_name, placeholder: "レイワ", autofocus: true, class: "name textlines-radius" %></td>
          <td class="nowrap">(メイ)</td>
            <td><%= f.text_field :kana_first_name, placeholder: "ハナコ", autofocus: true, class: "name textlines-radius" %></td>
        </tr>
    <tr>
            <th>メールアドレス</th>
            <td></td>
            <td><%= f.email_field :email, autofocus: true, placeholder: "hakumai@genmai", autocomplete: "email",class: "name textlines-radius" %></td>
            <td></td>
        </tr>
    <tr>
            <th>パスワード
                <% if @minimum_password_length %>
                 <em>(<%= @minimum_password_length %> 文字以上)</em>
                <% end %></th>
                <td></td>
            <td><%= f.password_field :password, autocomplete: "new-password",class: "name textlines-radius" %></td>
            <td></td>
        </tr>
    <tr>
            <th>パスワード（確認用）</th>
            <td></td>
            <td><%= f.password_field :password_confirmation, autocomplete: "new-password",class: "name textlines-radius" %></td>
            <td></td>
        </tr>
    <tr align="center">
      <td></td>
      <td></td>
      <th class="button text-left"><%= f.submit "新規登録", class: 'btn btn-success' %></th>
      <td></td>
    </tr>
  </table>
<% end %>
<div class="row m-3"></div>
  <%= render "public/shared/links" %>